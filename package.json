{
  "name": "pixi-vn-ink-vscode",
  "displayName": "ink language",
  "description": "Inkle's ink scripting language support for Visual Studio Code",
  "version": "0.3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DRincs-Productions/pixi-vn-ink-vscode.git"
  },
  "author": "drincs-productions",
  "publisher": "drincs-productions",
  "icon": "images/icon.png",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DRincs-Productions/pixi-vn-ink-vscode/issues"
  },
  "homepage": "https://github.com/DRincs-Productions/pixi-vn",
  "funding": "https://github.com/DRincs-Productions/pixi-vn?sponsor=1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ink",
    "inkle",
    "narrative",
    "pixi-vn",
    "game development"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ink",
        "aliases": [
          "ink"
        ],
        "extensions": [
          ".ink"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ink",
        "scopeName": "source.ink",
        "path": "./syntaxes/ink.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ink Extension Settings",
      "properties": {
        "ink.engine": {
          "type": "string",
          "enum": [
            "Inky",
            "pixi-vn"
          ],
          "enumDescriptions": [
            "Inky",
            "Pixi'VN"
          ],
          "default": "Inky",
          "description": "Select the engine used for developing the Ink project."
        },
        "ink.markup": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            null,
            "Markdown"
          ],
          "default": null,
          "description": "Select the markup format for the project. Default is none."
        },
        "ink.mainFile": {
          "type": "string",
          "default": "",
          "description": "Path to the main .ink file (e.g. main.ink). If empty, no main file is defined."
        },
        "ink.rootFolder": {
          "type": "string",
          "default": "",
          "description": "Root folder containing .ink files to be loaded. If empty, no root folder is defined."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "inkjs": "^2.3.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}