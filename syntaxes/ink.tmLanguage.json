{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ink",
	"scopeName": "source.ink",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#todo"
		},
		{
			"include": "#choices"
		},
		{
			"include": "#knots"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.ink",
					"match": "//.*$"
				},
				{
					"name": "comment.block.ink",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"todo": {
			"patterns": [
				{
					"name": "keyword.other.todo.ink",
					"match": "\\bTODO:.*$"
				}
			]
		},
		"choices": {
			"patterns": [
				{
					"name": "keyword.other.choice.ink",
					"match": "^[ \\t]*[\\*\\+]"
				},
				{
					"begin": "(?<=^[ \\t]*[\\*\\+].*?)\\[",
					"end": "\\]",
					"name": "keyword.other.choice.ink"
				}
			]
		},
		"knots": {
			"patterns": [
				{
					"name": "entity.name.knot.ink",
					"match": "^={2,}[ \\t]*[a-zA-Z0-9_]+[ \\t]*(={2,})?$"
				},
				{
					"name": "keyword.operator.divert.ink",
					"match": "->\\s*(END|DONE|[a-zA-Z0-9_]+)"
				}
			]
		}
	}
}