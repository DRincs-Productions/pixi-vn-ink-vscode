{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ink",
	"scopeName": "source.ink",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#todo"
		},
		{
			"include": "#choices"
		},
		{
			"include": "#knots"
		},
		{
			"include": "#glue"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.ink",
					"match": "//.*$"
				},
				{
					"name": "comment.block.ink",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"todo": {
			"patterns": [
				{
					"name": "keyword.other.todo.ink",
					"match": "\\bTODO:.*$"
				}
			]
		},
		"choices": {
			"patterns": [
				{
					"name": "keyword.other.choice.ink",
					"match": "^[ \\t]*[\\*\\+]"
				},
				{
					"begin": "(?<=^[ \\t]*[\\*\\+].*?)\\[",
					"end": "\\]",
					"name": "keyword.other.choice.ink"
				}
			]
		},
		"knots": {
			"patterns": [
				{
					"name": "keyword.other.knot.ink",
					"match": "=+"
				},
				{
					"name": "entity.name.function.ink",
					"match": "(?<=->\\s*)[a-zA-Z0-9_]+(?:\\.[a-zA-Z0-9_]+)?"
				},
				{
					"name": "entity.name.function.ink",
					"match": "(?<=^=\\s*)[a-zA-Z0-9_]+(?=\\s*)",
					"comment": "sub-knots / stitches"
				},
				{
					"name": "keyword.other.divert.ink",
					"match": "->"
				},
				{
					"name": "keyword.control.ink",
					"match": "(?<=->\\s*)(END|DONE)"
				},
				{
					"name": "entity.name.function.ink",
					"match": "(?<=->\\s*)[a-zA-Z0-9_]+"
				}
			]
		},
		"glue": {
			"patterns": [
				{
					"name": "keyword.other.glue.ink",
					"match": "<>"
				}
			]
		}
	}
}